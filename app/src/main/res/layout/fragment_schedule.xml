<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".schedule.ScheduleFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/card_back"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="BMS"
                            android:visibility="gone"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edt_bill_no"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Bill No"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/racl_blue"
                                android:textColorHint="@color/Grey"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/edt_challan_no"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Challan No"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_bill_challan_date"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Bill/Challan Date"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />


                            <EditText
                                android:id="@+id/edt_invoice_amount"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Invoice Amount"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:inputType="numberDecimal"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_transporter"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Transporter"
                                android:text=""
                                android:clickable="true"
                                android:focusable="false"
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />


                            <EditText
                                android:id="@+id/edt_vehicle_no"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Vehicle No"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_batch_code"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Batch Code"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />



                            <EditText
                                android:id="@+id/edt_heat_code"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Heat Code"
                                android:text=""
                                android:layout_weight="1"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />


                        </LinearLayout>

<!--                        <TextView-->
<!--                            android:id="@+id/showtext"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="35dp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:gravity="center"-->
<!--                            android:text=""-->
<!--                            android:visibility="visible"-->
<!--                            android:textColor="@android:color/black"-->
<!--                            android:textSize="14dp" />-->

                        <Button
                            android:id="@+id/btn_go"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center|right"
                            android:layout_margin="15dp"
                            android:background="@drawable/button_desgin_submit"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="GO"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/button_desgin_submit"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Submit"
                            android:textColor="@android:color/white"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edt_schedule_code"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Select Schedule Name"
                                android:clickable="true"
                                android:focusable="false"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/edt_item_code"
                                style="@android:style/TextAppearance.Small"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/login_edittext_desgin"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Select Item Name"
                                android:text=""
                                android:clickable="true"
                                android:focusable="false"
                                android:textColorHint="@color/Grey"
                                android:singleLine="true"
                                android:textColor="@color/racl_blue"
                                android:textSize="16dp" />




                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/schedule_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:divider="@null" />



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>